#!/bin/bash
home="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
read_xbox=$(readlink -f "$home/../build-Native-speed/read-xbox.main.out")
control_motors=$(readlink -f "$home/../build-Native-speed/buffered-execute.main.out")
set_motors=$(readlink -f "$home/set_motor")
js_input="/dev/input/js0"

"$read_xbox" "$js_input" | "$control_motors" "$set_motors"
